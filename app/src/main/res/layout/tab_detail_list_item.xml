<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/news_tab_list_items_icon_width"
        android:layout_height="@dimen/news_tab_list_items_icon_height"
        android:scaleType="centerCrop"
        android:src="@drawable/image_demo" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_icon"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="这个是标题"
        android:textSize="@dimen/news_tab_list_items_text_title_size" />


    <TextView
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_icon"
        android:layout_toRightOf="@id/iv_icon"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="这个是日期"
        android:textColor="@color/news_tab_list_item_date"
        android:textSize="@dimen/news_tab_list_items_text_date_size" />
</RelativeLayout>