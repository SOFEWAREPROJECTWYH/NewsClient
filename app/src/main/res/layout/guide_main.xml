<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="引导页"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_guide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp">
        <LinearLayout
            android:id="@+id/ll_indicator_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>
        <ImageView
            android:id="@+id/iv_circle_indicator_selected"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/guide_circle_indicator_selected_shape"/>
    </RelativeLayout>
    <Button
        android:id="@+id/bt_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:padding="5dp"
        android:text="开始体验"
        android:onClick="guideonclick"
        android:background="@drawable/guide_start_btn_bg_selector"
        android:textColor="@drawable/guide_start_btn_txt_color_selector"
        android:visibility="gone"/>
</RelativeLayout>